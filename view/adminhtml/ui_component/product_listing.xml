<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <listingToolbar name="listing_top">
        <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions">
            <action name="update_product_hot_color">
                <settings>
                    <confirm>
                        <title translate="true">Mass source assignment</title>
                        <message translate="true">Are you sure you want to assign selected items to Hot Color sources?</message>
                    </confirm>
                    <url path="catalogproduct/source/bulkUpdateHotColors"/>
                    <type>hotcolor-sources</type>
                    <label translate="true">Assign Hot Color Source</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
</listing>
